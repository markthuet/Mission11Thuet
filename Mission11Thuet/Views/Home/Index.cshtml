@{
    ViewData["Title"] = "Book Store"; // Sets the title of the page
}

@model BookList // Specifies the model type for the view

<style>
    /* CSS styles for the body */
    body {
        font-family: Arial, sans-serif; 
        background-color: #f2f2f2; 
        color: #333; 
    }

    /* CSS styles for the container div */
    .container {
        max-width: 900px; 
        margin: 20px auto; 
        padding: 20px; 
        background-color: #fff; 
        border-radius: 8px; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    }

    /* CSS styles for heading elements (h1, h2) */
    h1, h2 {
        color: #007bff; 
        text-align: center; 
    }

    /* CSS styles for the table container */
    .table-container {
        margin-top: 20px; 
    }

    /* CSS styles for the table */
    .table {
        width: 100%; 
        border-collapse: collapse; 
    }

    /* CSS styles for table header and data cells */
    .table th,
    .table td {
        padding: 12px;
        text-align: left; 
        border-bottom: 1px solid #ddd; 
        border-top: 1px solid #ddd; 
    }

    /* CSS styles for table header cells */
    .table th {
        background-color: #f2f2f2;
    }

    /* CSS styles for table row hover effect */
    .table tr:hover {
        background-color: #f5f5f5; 
    }

    /* CSS styles for table header rows */
    .table thead th {
        border-top: 2px solid #ddd; 
        border-bottom: 2px solid #ddd; 
    }

    /* CSS styles for table body rows */
    .table tbody td {
        border-top: 1px solid #ddd; 
        border-bottom: 1px solid #ddd; 
    }

    /* CSS styles for the last row in the table body */
    .table tbody tr:last-child td {
        border-bottom: none; 
    }

    /* CSS styles for alternating background color of table body rows */
    .table tbody tr:nth-child(even) {
        background-color: #f9f9f9; 
    }
</style>

<div class="container">
    <h1>AmaJAWN Book Store</h1> <!-- Heading for the page -->
    <div class="table-container">
        <h2>Books</h2> <!-- Heading for the table section -->
        <table class="table"> <!-- Table element -->
            <thead> <!-- Table header section -->
                <tr> <!-- Table header row -->
                    <th>Book ID</th> <!-- Table header cells -->
                    <th>Title</th>
                    <th>Author</th>
                    <th>Publisher</th>
                    <th>ISBN</th>
                    <th>Classification</th>
                    <th>Category</th>
                    <th>Page Count</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody> 
                @foreach (Book b in Model.Books) 
                {
                    <tr> 
                        <td>@b.BookId</td> 
                        <td>@b.Title</td>
                        <td>@b.Author</td>
                        <td>@b.Publisher</td>
                        <td>@b.Isbn</td>
                        <td>@b.Classification</td>
                        <td>@b.Category</td>
                        <td>@b.PageCount</td>
                        <td>@b.Price</td>
                    </tr>
                }
            </tbody>
        </table>
        <div page-model="@Model.PaginationInfo" page-action="Index"></div>
    </div>
</div>
